@model Netflixx.Models.ViewModel.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu";
}
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<link rel="stylesheet" href="~/css/login.css" />

<section class="login-wrapper">
    <div class="login-container">
        <div class="login-form">
            <div class="logo">
                <img src="~/image/logo/NetflixxLogo.png" alt="Netflixx Logo" />
            </div>
            <h2>Quên mật khẩu</h2>

            @if (TempData["success"] != null)
            {
                <div class="alert alert-success">@TempData["success"]</div>
            }
            @if (TempData["error"] != null)
            {
                <div class="alert alert-danger">@TempData["error"]</div>
            }

            <form asp-action="ForgotPassword" method="post">
                <div class="form-group">
                    <input asp-for="Email" class="form-control" placeholder=" " />
                    <label asp-for="Email" class="form-label">Email đăng ký</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Gửi mã OTP</button>

                <div class="login-link">
                    <a asp-action="Login" asp-controller="Login">Quay lại đăng nhập</a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
