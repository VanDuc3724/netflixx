@{
    ViewData["Title"] = "Đăng ký thành công";
}
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<!-- Link đến file CSS (dùng chung với login) -->
<link rel="stylesheet" href="~/css/login.css" />

<section id="form" class="login-wrapper">
    <div class="login-container">
        <div class="login-form">
            <div class="logo">
                <img src="~/image/logo/NetflixxLogo.png" alt="Netflixx Logo" />
            </div>

            <h2>Chào mừng đến với Netflixx!</h2>

            <div class="success-message">
                <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="#4CAF50" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                    <polyline points="22 4 12 14.01 9 11.01"></polyline>
                </svg>
                <h3>Đăng ký thành công</h3>
                <p>Tài khoản của bạn đã được tạo và bạn đã được đăng nhập tự động.</p>
            </div>

            <div class="form-group">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Bắt đầu trải nghiệm</a>
            </div>

            <div class="signup">
                Cần hỗ trợ? <a href="@Url.Action("Contact", "Home")">Liên hệ chúng tôi</a>
            </div>
        </div>
    </div>
</section>

<style>
    /* Thêm style riêng cho trang success */
    .success-message {
        text-align: center;
        margin-bottom: 30px;
        color: #fff;
    }

    .success-message svg {
        margin-bottom: 20px;
        animation: checkmark 0.6s ease;
    }

    .success-message h3 {
        font-size: 24px;
        margin-bottom: 10px;
        color: #4CAF50;
    }

    .success-message p {
        font-size: 16px;
        line-height: 1.6;
    }

    @@keyframes checkmark {
        0% {
            transform: scale(0);
            opacity: 0;
        }
        50% {
            transform: scale(1.2);
            opacity: 1;
        }
        100% {
            transform: scale(1);
        }
    }
</style>

@section Scripts {
    <script>
        // Ngăn cache trang để tránh back lại form đăng ký
        window.onload = function() {
            if (window.history.replaceState) {
                window.history.replaceState(null, null, window.location.href);
            }
        };
    </script>
}