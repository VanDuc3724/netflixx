@model ProductionManagerApp.Models.ProductionManager

@{
    ViewData["Title"] = "Chi tiết Công ty Sản xuất";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-building"></i> Chi tiết Công ty Sản xuất
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name):</dt>
                                <dd class="col-sm-8">
                                    <strong class="text-primary">@Html.DisplayFor(model => model.Name)</strong>
                                    @if (!string.IsNullOrEmpty(Model.Alias))
                                    {
                                        <span class="badge badge-secondary ml-2">@Model.Alias</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Country):</dt>
                                <dd class="col-sm-8">
                                    <i class="fas fa-flag"></i> @Html.DisplayFor(model => model.Country)
                                </dd>

                                @if (!string.IsNullOrEmpty(Model.CEO))
                                {
                                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CEO):</dt>
                                    <dd class="col-sm-8">
                                        <i class="fas fa-user-tie"></i> @Html.DisplayFor(model => model.CEO)
                                    </dd>
                                }

                                @if (Model.EstablishedDate.HasValue)
                                {
                                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.EstablishedDate):</dt>
                                    <dd class="col-sm-8">
                                        <i class="fas fa-calendar"></i> @Model.EstablishedDate.Value.ToString("dd/MM/yyyy")
                                    </dd>
                                }

                                @if (!string.IsNullOrEmpty(Model.Headquarters))
                                {
                                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Headquarters):</dt>
                                    <dd class="col-sm-8">
                                        <i class="fas fa-map-marker-alt"></i> @Html.DisplayFor(model => model.Headquarters)
                                    </dd>
                                }

                                @if (!string.IsNullOrEmpty(Model.Website))
                                {
                                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Website):</dt>
                                    <dd class="col-sm-8">
                                        <a href="@Model.Website" target="_blank" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-external-link-alt"></i> Truy cập website
                                        </a>
                                    </dd>
                                }

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CreatedAt):</dt>
                                <dd class="col-sm-8">
                                    <i class="fas fa-clock"></i> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                </dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.UpdatedAt):</dt>
                                <dd class="col-sm-8">
                                    <i class="fas fa-edit"></i> @Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-4 text-center">
                            @if (!string.IsNullOrEmpty(Model.LogoUrl))
                            {
                                <div class="mb-3">
                                    <img src="@Model.LogoUrl" alt="Logo @Model.Name" class="img-fluid rounded shadow" style="max-width: 200px; max-height: 200px;" />
                                </div>
                            }
                            else
                            {
                                <div class="mb-3">
                                    <i class="fas fa-image text-muted" style="font-size: 100px;"></i>
                                    <p class="text-muted">Không có logo</p>
                                </div>
                            }
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <hr>
                        <h5><i class="fas fa-info-circle"></i> Mô tả</h5>
                        <div class="alert alert-light">
                            @Html.Raw(Model.Description.Replace("\n", "<br/>"))
                        </div>
                    }

                    <div class="text-center mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg mr-2">
                            <i class="fas fa-edit"></i> Chỉnh sửa
                        </a>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left"></i> Quay lại danh sách
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Films Section -->
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-film"></i> Phim sản xuất
                        <span class="badge badge-light ml-2">@Model.Films.Count()</span>
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Films.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var film in Model.Films.Take(5))
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@film.Title</h6>
                                        @if (film.ReleaseDate.HasValue)
                                        {
                                            <small>@film.ReleaseDate.Value.Year</small>
                                        }
                                    </div>
                                    @if (!string.IsNullOrEmpty(film.Genre))
                                    {
                                        <small class="text-muted">@film.Genre</small>
                                    }
                                </div>
                            }
                        </div>
                        @if (Model.Films.Count() > 5)
                        {
                            <div class="text-center mt-3">
                                <small class="text-muted">và @(Model.Films.Count() - 5) phim khác...</small>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center text-muted">
                            <i class="fas fa-film fa-3x mb-3"></i>
                            <p>Chưa có phim nào được sản xuất</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Statistics Card -->
            <div class="card mt-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar"></i> Thống kê
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="border-right">
                                <h4 class="text-primary">@Model.Films.Count()</h4>
                                <small class="text-muted">Tổng phim</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <h4 class="text-success">
                                @if (Model.EstablishedDate.HasValue)
                                {
                                    @((DateTime.Now.Year - Model.EstablishedDate.Value.Year))
                                }
                                else
                                {
                                    <span>--</span>
                                }
                            </h4>
                            <small class="text-muted">Năm hoạt động</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add some interactive effects
        $(document).ready(function() {
            // Smooth scroll for internal links
            $('a[href^="#"]').on('click', function(event) {
                var target = $(this.getAttribute('href'));
                if (target.length) {
                    event.preventDefault();
                    $('html, body').stop().animate({
                        scrollTop: target.offset().top - 100
                    }, 1000);
                }
            });

            // Tooltip for badges
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}