<!-- Scripts -->
@section Scripts {

    <script>
        $(document).ready(function () {
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            var allData = [];
            var filteredData = [];
            var currentPage = 1;
            var pageSize = 5;
            var currentView = 'grid';

            // Load initial data
            loadData();
             $('.view-btn').on('click', function () {
                var view = $(this).data('view');
                $('.view-btn').removeClass('active');
                $(this).addClass('active');
                currentView = view;
                displayData();
            });

            function loadData() {
                $('#loadingIndicator').show();
                $('#cardsContainer').hide();
                $('#noResults').hide();
                $('#paginationContainer').hide();

                $.ajax({
                    url: '/ProductionManager/GetAll',
                    method: 'GET',
                    success: function(data) {
                        allData = data;
                        filteredData = [...allData];
                        updateTotalCount();
                        displayData();
                        $('#loadingIndicator').hide();
                    },
                    error: function() {
                        $('#loadingIndicator').hide();
                        console.error('Không thể tải dữ liệu');
                    }
                });
            }

            function updateTotalCount() {
                $('#totalCount').text(filteredData.length);
                $('#totalCountHeader').text(filteredData.length);
            }
            function displayData() {
                if (currentView === 'grid') {
                    $('#tableView').hide();
                    displayCards();
                    $('#cardsContainer').show();
                } else {
                    $('#cardsContainer').hide();
                    displayTable();
                    $('#tableView').show();
                }
            }

            function displayTable() {
                var startIndex = (currentPage - 1) * pageSize;
                var endIndex = startIndex + pageSize;
                var pageData = filteredData.slice(startIndex, endIndex);

                if (pageData.length === 0) {
                    $('#tableView').hide();
                    $('#noResults').show();
                    $('#paginationContainer').hide();
                    return;
                }

                var rows = '';
                pageData.forEach(function(item) {
                    var logoSrc = item.logoUrl || '/image/logo/NetflixxLogo.png';
                    rows += `
                        <tr>
                            <td><img src="${logoSrc}" alt="${item.name}" style="width:40px;height:40px;object-fit:contain" onerror="this.src='/image/logo/NetflixxLogo.png'"></td>
                            <td>${item.name}</td>
                            <td>${item.country}</td>
                            <td>${item.ceo || ''}</td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-primary btn-sm" href="/ProductionManager/Edit/${item.id}" title="Chỉnh sửa"><i class="fas fa-edit"></i></a>
                                    <a class="btn btn-info btn-sm" href="/ProductionManager/Details/${item.id}" title="Xem chi tiết"><i class="fas fa-eye"></i></a>
                                    <a class="btn btn-danger btn-sm delete-link" href="#" data-id="${item.id}" title="Xóa"><i class="fas fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>`;
                });

                $('#tableBody').html(rows);
                $('#noResults').hide();
                updatePagination();
            }

            function displayCards() {
                var startIndex = (currentPage - 1) * pageSize;
                var endIndex = startIndex + pageSize;
                var pageData = filteredData.slice(startIndex, endIndex);

                if (pageData.length === 0) {
                    $('#cardsContainer').hide();
                    $('#noResults').show();
                    $('#paginationContainer').hide();
                    return;
                }

                var html = '';
                pageData.forEach(function(item) {
                    var logoSrc = item.logoUrl || '/image/logo/NetflixxLogo.png';
                    var websiteHtml = item.website ?
                        '<a href="' + item.website + '" target="_blank" class="website-link"><i class="fas fa-external-link-alt"></i> Truy cập</a>' :
                        '<span class="text-muted">Không có</span>';

                    html += `
                        <div class="company-card">
                            <div class="card-header-section">
                                <div class="logo-container">
                                    <img src="${logoSrc}" alt="${item.name}" class="logo-thumbnail" onerror="this.src='/image/logo/NetflixxLogo.png'">
                                </div>
                                <div class="company-info">
                                    <h3 class="company-name">${item.name}</h3>
                                    ${item.alias ? '<p class="company-alias">' + item.alias + '</p>' : ''}
                                </div>
                            </div>
                            <div class="card-body-section">
                                <div class="info-item">
                                    <div class="info-label"><i class="fas fa-globe"></i> Website</div>
                                    <div class="info-value">${websiteHtml}</div>
                                </div>
                                <div class="info-item">
                                    <div class="info-label"><i class="fas fa-flag"></i> Quốc gia</div>
                                    <div class="info-value"><span class="country-badge">${item.country}</span></div>
                                </div>
                                <div class="info-item">
