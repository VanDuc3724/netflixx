@model PaginatedList<ProductionManagerApp.Models.ProductionManager>
@{
    ViewData["Title"] = "Quản Lý Công Ty Sản Xuất";
}
@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css" />
}
<style>

        body {
            background-color: #1f1f1f;
            color: #fff;
            transition: margin-left 0.3s;
            overflow-x: hidden;
        }

        .navbar {
            z-index: 1100;
        }

        .sidebar {
            position: fixed;
            top: 70px;
            left: 0;
            height: calc(100vh - 70px);
            width: 230px;
            background-color: #2c2c2c;
            overflow-y: auto;
            transition: transform 0.3s ease;
            z-index: 1000;
            display: flex;
            flex-direction: column;
            border-right: 1px solid #444;
        }

            .sidebar.collapsed {
                transform: translateX(-100%);
            }

            .sidebar a {
                display: block;
                padding: 15px 20px;
                color: #fff;
                text-decoration: none;
                white-space: nowrap;
            }

                .sidebar a:hover {
                    background-color: #ff4d6d;
                }

        .main-content {
            margin-left: 230px;
            padding: 100px 20px 20px;
            transition: margin-left 0.3s ease;
        }

            .main-content.expanded {
                margin-left: 0;
            }

        .toggle-btn,
        .show-sidebar-btn {
            position: fixed;
            top: 75px;
            z-index: 1200;
            background-color: #ff4d6d;
            color: #fff;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
        }

        .toggle-btn {
            left: 10px;
        }

        .show-sidebar-btn {
            left: 10px;
            display: none;
        }

        .sidebar.collapsed ~ .show-sidebar-btn {
            display: block;
        }

        .card {
            background-color: #2c2c2c;
            border: 1px solid #444;
            margin-bottom: 20px;
        }

        .card-header {
            background-color: #ff4d6d;
            color: #fff;
        }

        .filter-card .card-header {
            background-color: #ff4d6d;
        }

        .btn-primary {
            background-color: #ff4d6d;
            border: none;
        }

        .btn-success {
            background-color: #28a745;
            border: none;
        }

        .btn-info {
            background-color: #17a2b8;
            border: none;
        }

        .btn-danger {
            background-color: #dc3545;
            border: none;
        }

        .table {
            color: #fff;
            width: 100%;
        }

            .table thead {
                background-color: #333;
            }

        .modal-content {
            background-color: #2c2c2c;
            color: #fff;
        }

        .badge-primary {
            background-color: #ff4d6d;
        }

        .badge-success {
            background-color: #28a745;
        }

        .badge-warning {
            background-color: #ffc107;
            color: #000;
        }

        .badge-secondary {
            background-color: #6c757d;
        }

        .form-control {
            background-color: #3c3c3c;
            border: 1px solid #555;
            color: #fff;
        }

            .form-control:focus {
                background-color: #3c3c3c;
                border-color: #ff4d6d;
                color: #fff;
                box-shadow: 0 0 0 0.2rem rgba(255, 77, 109, 0.25);
            }

        .logo-thumbnail {
            width: 40px;
            height: 40px;
            object-fit: cover;
            border-radius: 5px;
        }

        .website-link {
            color: #17a2b8;
            text-decoration: none;
        }

            .website-link:hover {
                color: #0d6efd;
                text-decoration: underline;
            }
    </style>


    @await Html.PartialAsync("_ProductionManagerMenu")


    <!-- Nội dung chính -->
    <div class="main-content" id="mainContent">
        <!-- Card tìm kiếm và lọc -->
        <div class="card shadow filter-card">
            <div class="card-header">
                <strong><i class="fas fa-search"></i> Tìm kiếm & Lọc</strong>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <label>Tên công ty</label>
                        <input type="text" class="form-control" id="searchName" placeholder="Tìm theo tên công ty...">
                    </div>
                    <div class="col-md-3">
                        <label>Quốc gia</label>
                        <select class="form-control" id="filterCountry">
                            <option value="">Tất cả</option>
                            <option value="USA">Hoa Kỳ</option>
                            <option value="UK">Anh</option>
                            <option value="France">Pháp</option>
                            <option value="Germany">Đức</option>
                            <option value="Japan">Nhật Bản</option>
                            <option value="Korea">Hàn Quốc</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label>CEO</label>
                        <input type="text" class="form-control" id="searchCEO" placeholder="Tìm theo CEO...">
                    </div>
                    <div class="col-md-3">
                        <label>&nbsp;</label>
                        <button class="btn btn-primary btn-block" id="searchBtn">
                            <i class="fas fa-search"></i> Tìm kiếm
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card danh sách công ty -->
        <div class="card shadow">
            <div class="card-header d-flex justify-content-between align-items-center">
                <strong><i class="fas fa-building"></i> Danh Sách Công Ty Sản Xuất</strong>
                <div>
                    <a asp-action="Create" class="btn btn-success btn-sm mr-2">
                        <i class="fas fa-plus"></i> Thêm Công Ty Mới
                </a>
                <span class="badge badge-primary">Tổng: @Model.TotalCount</span>
            </div>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <span class="mr-2">Xem</span>
                            <select class="form-control" style="width: 80px;" id="pageLength">
                                <option value="5">5</option>
                                <option value="10">10</option>
                                <option value="100">100</option>
                            </select>
                            <span class="ml-2">mục</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-bordered" id="dataTable">
                        <thead>
                            <tr>
                                <th><i class="fas fa-image"></i> Logo</th>
                                <th><i class="fas fa-building"></i> Tên công ty</th>
                                <th><i class="fas fa-globe"></i> Website</th>
                                <th><i class="fas fa-flag"></i> Quốc gia</th>
                                <th><i class="fas fa-calendar"></i> Thành lập</th>
                                <th><i class="fas fa-user-tie"></i> CEO</th>
                                <th><i class="fas fa-map-marker-alt"></i> Trụ sở</th>
                                <th><i class="fas fa-cogs"></i> Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                           
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div>
                        <span>Đang xem @Model.Count trong tổng số @Model.TotalCount mục</span>
                    </div>
                    <div>
                        <nav>
                            <ul class="pagination mb-0">
                                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)">Trước</a>
                                </li>
                                @for (var i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
                                    </li>
                                }
                                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)">Tiếp</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
    </div>

    <!-- Modal xác nhận xóa -->
        <div class="modal fade" id="deleteModal" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered" id="deleteModalContainer"></div>
        </div>

    <!-- Scripts -->
    @section Scripts {

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            // Initialize DataTable
            var table = $('#dataTable').DataTable({
                        ajax: {
                            url: '/ProductionManager/GetAll',
                            dataSrc: ''
                        },
                        columns: [
                            {
                                data: 'logoUrl',
                                render: function (data, type, row) {
                                    var src = data ? data : '/image/logo/NetflixxLogo.png';
                                    return '<img src="' + src + '" alt="' + row.name + '" class="logo-thumbnail" onerror="this.src=\'/image/logo/NetflixxLogo.png\'">';
                                }
                            },
                            {
                                data: 'name',
                                render: function (data, type, row) {
                                    if (row.alias) {
                                        return '<strong>' + data + '</strong><br/><small class="text-muted">' + row.alias + '</small>';
                                    }
                                    return '<strong>' + data + '</strong>';
                                }
                            },
                            {
                                data: 'website',
                                render: function (data) {
                                    if (data) {
                                        return '<a href="' + data + '" target="_blank" class="website-link"><i class="fas fa-external-link-alt"></i> ' + data + '</a>';
                                    }
                                    return '';
                                }
                            },
                            {
                                data: 'country',
                                render: function (data) {
                                    return '<span class="badge badge-primary">' + data + '</span>';
                                }
                            },
                            { data: 'establishedDate' },
                            { data: 'ceo' },
                            { data: 'headquarters' },
                            {
                                data: 'id',
                                render: function (data) {
                                    return '<div class="btn-group">' +
                                        '<a class="btn btn-sm btn-primary" href="/ProductionManager/Edit/' + data + '" title="Chỉnh sửa"><i class="fas fa-edit"></i></a>' +
                                        '<a class="btn btn-sm btn-info" href="/ProductionManager/Details/' + data + '" title="Xem chi tiết"><i class="fas fa-eye"></i></a>' +
                                        '<a class="btn btn-sm btn-danger delete-link" href="#" data-id="' + data + '" title="Xóa"><i class="fas fa-trash"></i></a>' +                                        '</div>';
                                }
                            }
                        ],
                        pageLength: 10,
                        searching: false,
                        paging: false,
                        info: false,
                        language: {
                            url: '//cdn.datatables.net/plug-ins/1.10.21/i18n/Vietnamese.json'
                }
            });

           

            // Search functionality
            $('#searchBtn').click(function () {
                var name = $('#searchName').val().toLowerCase();
                        var country = $('#filterCountry').val().toLowerCase();
                        var ceo = $('#searchCEO').val().toLowerCase();

                table.rows().every(function () {
                            var rowData = this.data();
                            var nameMatch = !name || (rowData.name && rowData.name.toLowerCase().includes(name));
                            var countryMatch = !country || (rowData.country && rowData.country.toLowerCase().includes(country));
                            var ceoMatch = !ceo || (rowData.ceo && rowData.ceo.toLowerCase().includes(ceo));

                    if (nameMatch && countryMatch && ceoMatch) {
                        $(this.node()).show();
                    } else {
                        $(this.node()).hide();
                    }
                });
            });

            // Global search
            $('#globalSearch').on('keyup', function () {
                var value = $(this).val().toLowerCase();
                table.rows().every(function () {
                             var rowData = this.data();
                            var combined = Object.values(rowData).join(' ').toLowerCase();
                            if (combined.includes(value)) {
                        $(this.node()).show();
                    } else {
                        $(this.node()).hide();
                    }
                });
            });

            // Page length change
                       $('#pageLength').change(function () {
                var length = $(this).val();
                table.page.len(length).draw();
            });
                    $('body').on('click', '.delete-link', function (e) {
                        e.preventDefault();
                        var id = $(this).data('id');
                        $('#deleteModalContainer').load('/ProductionManager/Delete/' + id, function () {
                            $('#deleteModal').modal('show');
                        });
                    });
                });
            </script>
            @await Html.PartialAsync("_ProductionManagerMenuScripts")
            @if (TempData["SuccessMessage"] != null)
            {
                <script>
                    document.addEventListener('DOMContentLoaded', function () {
                        Swal.fire({
                            toast: true,
                            position: 'bottom-end',
                            icon: 'success',
                            title: '@TempData["SuccessMessage"]',
                            showConfirmButton: false,
                            timer: 3000,
                            timerProgressBar: true
                        });
                    });
                </script>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <script>
                    document.addEventListener('DOMContentLoaded', function () {
                        Swal.fire({
                            toast: true,
                            position: 'bottom-end',
                            icon: 'error',
                            title: '@TempData["ErrorMessage"]',
                            showConfirmButton: false,
                            timer: 3000,
                            timerProgressBar: true
                        });
                    });
                </script>
            }
        }
