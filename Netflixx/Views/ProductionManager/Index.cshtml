@model PaginatedList<ProductionManagerApp.Models.ProductionManager>

@{
    ViewData["Title"] = "Danh sách công ty sản xuất";
}
<div class="container mt-4">
    <h2 class="text-white mb-4">@ViewData["Title"]</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    <p>
        <a asp-action="Create" class="btn btn-danger shadow-sm">Thêm công ty mới</a>
    </p>
    <form asp-action="Index" method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" class="form-control bg-dark text-white border-0 shadow-sm" placeholder="Tìm kiếm công ty">
            <input type="number" name="yearFilter" value="@ViewData["YearFilter"]" class="form-control bg-dark text-white border-0 shadow-sm" placeholder="Năm">
            <button type="submit" class="btn btn-danger shadow-sm">Tìm</button>
            <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">Xóa</a>
        </div>
    </form>

    <div class="row">
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="production-card card h-100 text-white bg-dark shadow-lg">
                        <img src="@((!string.IsNullOrEmpty(item.LogoUrl) ? item.LogoUrl : "/image/logo/NetflixxLogo.png"))" class="card-img-top" alt="@item.Name Logo" onerror="this.src='/image/logo/NetflixxLogo.png'" />
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">
                                <small class="text-muted">@item.Country</small><br />
                                @if (item.EstablishedDate.HasValue)
                                {
                                    <small class="text-muted">Ngày thành lập: @item.EstablishedDate.Value.ToString("dd/MM/yyyy")</small>
                                    <br />
                                }
                                <small class="text-muted">Films: @item.Films.Count</small>
                            </p>
                            <div class="btn-group btn-group-sm w-100">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Chi tiết</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success">Sửa</a>
                                <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id">Xóa</button>
                            </div>
                        </div>
                    </div>

                    <!-- Delete Modal -->
                    <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@item.Id" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content bg-dark text-white">
                                <div class="modal-header border-0">
                                    <h5 class="modal-title" id="deleteModalLabel-@item.Id">Xóa công ty sản xuất</h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Bạn có chắc muốn xóa <strong>@item.Name</strong>?
                                </div>
                                <div class="modal-footer border-0">
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                        <button type="submit" class="btn btn-danger">Xóa</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center">Chưa có công ty nào.</div>
            </div>
        }
    </div>

    @if (Model.TotalPages > 1)
    {
        <nav>
            <ul class="pagination justify-content-center">
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-searchString="@ViewData["CurrentFilter"]" asp-route-yearFilter="@ViewData["YearFilter"]" class="page-link">Trước</a>
                    </li>
                }
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a asp-action="Index" asp-route-pageNumber="@i" asp-route-searchString="@ViewData["CurrentFilter"]" asp-route-yearFilter="@ViewData["YearFilter"]" class="page-link">@i</a>
                    </li>
                }
                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-searchString="@ViewData["CurrentFilter"]" asp-route-yearFilter="@ViewData["YearFilter"]" class="page-link">Sau</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>
<style>
    /* Cài đặt màu sắc nền và văn bản */
    body {
        background-color: #121212; /* Màu nền tối để làm nổi bật các yếu tố giao diện */
        color: #fff; /* Màu văn bản sáng cho dễ đọc trên nền tối */
    }

    /* Màu nền của các thẻ công ty (Production Card) */
    .production-card {
        background-color: #1c1c1c; /* Màu xám đen dễ nhìn */
        border: 1px solid #444; /* Viền xám nhẹ */
        border-radius: 8px; /* Bo góc mềm mại */
        overflow: hidden;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        /* Hiệu ứng hover cho thẻ công ty */
        .production-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 123, 255, 0.3); /* Màu xanh biển đậm khi hover */
        }

        /* Màu của tiêu đề công ty (Card Title) */
        .production-card .card-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #007BFF; /* Màu xanh biển đậm */
        }

    /* Màu nền của các nút */
    .btn-danger,
    .btn-outline-danger,
    .btn-outline-success,
    .btn-outline-info {
        transition: background-color 0.3s, color 0.3s;
    }

        /* Màu nền của các nút khi hover */
        .btn-danger:hover,
        .btn-outline-danger:hover,
        .btn-outline-success:hover,
        .btn-outline-info:hover {
            background-color: #007BFF; /* Màu xanh biển đậm khi hover */
            color: white;
        }

    /* Màu nền của input và nút tìm kiếm */
    .input-group {
        display: flex;
        justify-content: space-between;
        gap: 10px; /* Tạo khoảng cách giữa các ô */
        margin-bottom: 15px;
    }

        .input-group input,
        .input-group button {
            border-radius: 50px;
        }

        .input-group input {
            flex-grow: 1; /* Giúp input chiếm hết không gian còn lại */
        }

        .input-group button {
            background-color: #007BFF; /* Màu xanh biển đậm cho nút */
            color: white;
            padding: 10px 20px; /* Tạo khoảng cách cho nút */
        }

    /* Màu của phân trang */
    .pagination {
        margin-top: 30px;
        font-size: 1rem;
    }

        .pagination .page-item.active .page-link {
            background-color: #007BFF;
            border-color: #007BFF;
        }

        .pagination .page-link {
            border-radius: 50%;
            margin: 0 5px;
            font-size: 1rem;
            transition: background-color 0.2s ease;
        }

            .pagination .page-link:hover {
                background-color: #007BFF;
                color: #fff;
            }

    /* Màu nền và viền của các thẻ công ty */
    .card-img-top {
        height: 180px;
        object-fit: contain;
    }

    /* Màu nền của các card body */
    /* Màu nền của các thẻ công ty (Production Card) */
    .production-card {
        background-color: #2b2b2b; /* Thay đổi màu nền thành xám đen sáng hơn */
        border: 1px solid #444; /* Viền xám nhẹ */
        border-radius: 8px; /* Bo góc mềm mại */
        overflow: hidden;
        transition: transform 0.3s, box-shadow 0.3s;
    }
    /* Màu của các nút trong nhóm */
    .btn-group .btn {
        border-radius: 50px;
    }

    /* Cập nhật màu nền của các thông báo thành công và lỗi */
    .alert-success {
        background-color: #28a745; /* Màu xanh lá cây cho thông báo thành công */
        color: white;
    }

    .alert-danger {
        background-color: #dc3545; /* Màu đỏ cho thông báo lỗi */
        color: white;
    }

    .alert-info {
        background-color: #17a2b8; /* Màu xanh dương nhẹ cho thông báo thông tin */
        color: white;
    }

    /* Màu nền của các card body */
    .production-card .card-body {
        background-color: #1e1e2f; /* Màu xanh đen nhạt, tạo cảm giác sang trọng */
        padding: 1.25rem;
    }

    .card-img-top {
        width: 100%; /* Chiếm 100% chiều rộng của thẻ */
        height: 200px; /* Điều chỉnh chiều cao ảnh */
        object-fit: cover; /* Đảm bảo ảnh không bị méo, tự động cắt để phủ đầy */
        background-color: #000; /* Đảm bảo ảnh có nền đen */
    }

</style>