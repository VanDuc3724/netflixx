<!-- Nội dung chính -->
<div class="main-content" id="mainContent">
    <!-- Card tìm kiếm và lọc -->
    <div class="card shadow filter-card">
        <div class="card-header">
            <strong><i class="fas fa-search"></i> Tìm kiếm & Lọc</strong>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <label>Tên công ty</label>
                    <input type="text" class="form-control" id="searchName" placeholder="Tìm theo tên công ty...">
                </div>
                <div class="col-md-3">
                    <label>Quốc gia</label>
                    <input type="text" class="form-control" id="filterCountry" list="filterCountryList" placeholder="Tất cả" />
                    <datalist id="filterCountryList">
                        @await Html.PartialAsync("_CountryOptions", null)

                    </datalist>
                </div>
                <div class="col-md-3">
                    <label>CEO</label>
                    <input type="text" class="form-control" id="searchCEO" placeholder="Tìm theo CEO...">
                </div>
                <div class="col-md-3">
                    <label>&nbsp;</label>
                    <button class="btn btn-primary btn-block" id="searchBtn">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Card danh sách công ty -->
    <div class="card shadow">
        <div class="card-header d-flex justify-content-between align-items-center">
            <strong><i class="fas fa-building"></i> Danh Sách Công Ty Sản Xuất</strong>
            <div>
                <a asp-action="Create" class="btn btn-success btn-sm mr-2">
                    <i class="fas fa-plus"></i> Thêm Công Ty Mới
                </a>
                <span class="badge badge-primary">Tổng: @Model.TotalCount</span>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="d-flex align-items-center">
                        <span class="mr-2">Xem</span>
                        <select class="form-control" style="width: 80px;" id="pageLength">
                            <option value="5">5</option>
                            <option value="10" selected>10</option>
                            <option value="100">100</option>
                        </select>
                        <span class="ml-2">mục</span>
                    </div>
                </div>
                <div class="col-md-6">
                </div>
            </div>

            <div class="table-container">
                <div class="table-responsive">
                    <table class="table" id="dataTable">
                        <thead>
                            <tr>
                                <th><i class="fas fa-image"></i> Logo</th>
                                <th><i class="fas fa-building"></i> Tên công ty</th>
                                <th><i class="fas fa-globe"></i> Website</th>
                                <th><i class="fas fa-flag"></i> Quốc gia</th>
                                <th><i class="fas fa-calendar"></i> Thành lập</th>
                                <th><i class="fas fa-user-tie"></i> CEO</th>
                                <th><i class="fas fa-map-marker-alt"></i> Trụ sở</th>
                                <th><i class="fas fa-cogs"></i> Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>

        <!-- Modal xác nhận xóa -->
        <div class="modal fade" id="deleteModal" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered" id="deleteModalContainer"></div>
        </div>

        <!-- Scripts -->
        @section Scripts {

            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
            <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
            <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>
            <script>
                $(document).ready(function () {
                    // Initialize DataTable
                    var initialLength = parseInt($('#pageLength').val());
                    var table = $('#dataTable').DataTable({
                                ajax: {
                                    url: '/ProductionManager/GetAll',
                                    dataSrc: ''
                                },
                                columns: [
                                    {
                                        data: 'logoUrl',
                                        render: function (data, type, row) {
                                            var src = data ? data : '/image/logo/NetflixxLogo.png';
                                            return '<img src="' + src + '" alt="' + row.name + '" class="logo-thumbnail" onerror="this.src=\'/image/logo/NetflixxLogo.png\'">';
                                        }
                                    },
                                    {
                                        data: 'name',
                                        render: function (data, type, row) {
                                            var html = '<div class="company-info">';
                                            html += '<div class="company-name">' + data + '</div>';
                                            if (row.alias) {
                                                html += '<div class="company-alias">' + row.alias + '</div>';
                                            }
                                            html += '</div>';
                                            return html;
                                        }
                                    },
                                    {
                                        data: 'website',
                                        render: function (data) {
                                            if (data) {
                                                return '<a href="' + data + '" target="_blank" class="website-link"><i class="fas fa-external-link-alt"></i> Truy cập</a>';
                                            }
                                            return '<span class="text-muted">Không có</span>';
                                        }
                                    },
                                    {
                                        data: 'country',
                                        render: function (data) {
                                            return '<span class="country-badge">' + data + '</span>';
                                        }
                                    },
                                    {
                                        data: 'establishedDate',
                                        render: function (data) {
                                            return '<span class="established-year">' + data + '</span>';
                                        }
                                    },
                                    {
                                        data: 'ceo',
                                        render: function (data) {
                                            return '<span class="ceo-name">' + data + '</span>';
                                        }
                                    },
                                    {
                                        data: 'headquarters',
                                        render: function (data) {
                                            return '<span class="headquarters-info">' + data + '</span>';
                                        }
                                    },
                                    {
                                        data: 'id',
                                        render: function (data) {
                                            return '<div class="btn-group">' +
                                                '<a class="btn btn-sm btn-primary" href="/ProductionManager/Edit/' + data + '" title="Chỉnh sửa"><i class="fas fa-edit"></i></a>' +
                                                '<a class="btn btn-sm btn-info" href="/ProductionManager/Details/' + data + '" title="Xem chi tiết"><i class="fas fa-eye"></i></a>' +
                        '<a class="btn btn-sm btn-secondary" href="/ProductionManager/History/' + data + '" title="Lịch sử"><i class="fas fa-history"></i></a>' +
                                                                '<a class="btn btn-sm btn-danger delete-link" href="#" data-id="' + data + '" title="Xóa"><i class="fas fa-trash"></i></a>' +
                                                                '</div>';                                }
                                    }
                                ],
                                        pageLength: initialLength,
                                        searching: false,
                                        paging: true,
                                        info: true,
                                        lengthChange: false,
                                                language: {
                                    url: '//cdn.datatables.net/plug-ins/1.10.21/i18n/Vietnamese.json'
                        }
                    });



                    // Search functionality
                    $('#searchBtn').click(function () {
                        var name = $('#searchName').val().toLowerCase();
                                var country = $('#filterCountry').val().toLowerCase();
                                var ceo = $('#searchCEO').val().toLowerCase();

                        table.rows().every(function () {
                                    var rowData = this.data();
                                    var nameMatch = !name || (rowData.name && rowData.name.toLowerCase().includes(name));
                                    var countryMatch = !country || (rowData.country && rowData.country.toLowerCase().includes(country));
                                    var ceoMatch = !ceo || (rowData.ceo && rowData.ceo.toLowerCase().includes(ceo));

                            if (nameMatch && countryMatch && ceoMatch) {
                                $(this.node()).show();
                            } else {
                                $(this.node()).hide();
                            }
                        });
                    });

                    // Global search
                    $('#globalSearch').on('keyup', function () {
                        var value = $(this).val().toLowerCase();
                        table.rows().every(function () {
                                     var rowData = this.data();
                                    var combined = Object.values(rowData).join(' ').toLowerCase();
                                    if (combined.includes(value)) {
                                $(this.node()).show();
                            } else {
                                $(this.node()).hide();
                            }
                        });
                    });

                    // Page length change
                               $('#pageLength').change(function () {
                                var length = parseInt($(this).val());
                                table.page.len(length).draw();
                    });
                            $('body').on('click', '.delete-link', function (e) {
                                e.preventDefault();
                                var id = $(this).data('id');
                                $('#deleteModalContainer').load('/ProductionManager/Delete/' + id, function () {
                                    $('#deleteModal').modal('show');
                                });
                            });
                        });
            </script>
            @await Html.PartialAsync("_ProductionManagerMenuScripts")
            @if (TempData["SuccessMessage"] != null)
            {
                <script>
                    document.addEventListener('DOMContentLoaded', function () {
                        Swal.fire({
                            toast: true,
                            position: 'bottom-end',
                            icon: 'success',
                            title: '@TempData["SuccessMessage"]',
                            showConfirmButton: false,
                            timer: 3000,
                            timerProgressBar: true
                        });
                    });
                </script>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <script>
                    document.addEventListener('DOMContentLoaded', function () {
                        Swal.fire({
                            toast: true,
                            position: 'bottom-end',
                            icon: 'error',
                            title: '@TempData["ErrorMessage"]',
                            showConfirmButton: false,
                            timer: 3000,
                            timerProgressBar: true
