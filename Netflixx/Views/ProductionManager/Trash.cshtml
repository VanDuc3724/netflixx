@model IEnumerable<ProductionManagerApp.Models.ProductionManager>
@{
    ViewData["Title"] = "Thùng rác";
}
@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}

@await Html.PartialAsync("_ProductionManagerMenu")
<div class="main-content" id="mainContent">
    <div class="container mt-4">
        <div class="card bg-dark text-white shadow-lg">
            <div class="card-header">
                <h4><i class="fas fa-trash-alt"></i> Thùng rác</h4>
            </div>
            <div class="card-body">
                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th>Tên công ty</th>
                            <th>Quốc gia</th>
                            <th>Ngày xóa</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Country</td>
                                <td>@item.DeletedAt?.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <form asp-action="Restore" asp-route-id="@item.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-success btn-sm"><i class="fas fa-undo"></i> Khôi phục</button>
                                    </form>
                                    <form asp-action="HardDelete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc muốn xóa vĩnh viễn?');">
                                        <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Xóa vĩnh viễn</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ProductionManagerMenuScripts")
}
