@model ProductionManagerApp.Models.ProductionManager

@{
    ViewData["Title"] = "Xóa công ty sản xuất";
}

@await Html.PartialAsync("_ProductionManagerMenu")

<div class="main-content" id="mainContent">

<div class="container mt-4">
    <h1 class="text-white">@ViewData["Title"]</h1>
    <h3 class="text-warning">Bạn có chắc muốn xóa công ty này?</h3>

    <div class="card bg-dark text-white mt-4">
        <div class="card-body">
            <h3 class="text-danger">@Model.Name</h3>
            <p class="text-muted">
                @Model.Country
                @if (Model.EstablishedDate.HasValue)
                {
                    <span> | Thành lập: @Model.EstablishedDate.Value.ToString("dd/MM/yyyy")</span>
                }
            </p>
            <p class="text-muted">Số phim: @Model.Films.Count</p>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Xóa" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-outline-light ms-2">Hủy</a>
            </form>
        </div>
        </div>

    </div>
</div>
@await Html.PartialAsync("_ProductionManagerMenuScripts")