@model IEnumerable<Netflixx.Models.PointsTransactionsModel>
@{
    ViewData["Title"] = "Lịch sử thanh toán";
}
<h2>Lịch sử thanh toán</h2>
<table class="table">
    <thead>
        <tr>
            <th>Ngày</th>
            <th>Thay đổi</th>
            <th>Lý do</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.TransactionDate.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
            <td>@item.PointsChange</td>
            <td>@item.Reason</td>
        </tr>
}
    </tbody>
</table>
<a asp-action="Index" class="btn btn-secondary">Quay lại</a>
