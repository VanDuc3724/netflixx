@model IEnumerable<Netflixx.Models.PaymentTransactionsModel>
@{
    ViewData["Title"] = "Payment History";
}

<h2 class="mt-4 mb-3">Lịch sử giao dịch</h2>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>Ngày</th>
            <th>Số tiền</th>
            <th>Trạng thái</th>
            <th>Mã tham chiếu</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="4" class="text-center">Chưa có giao dịch</td>
            </tr>
        }
        else
        {
            foreach (var t in Model)
            {
                <tr>
                    <td>@t.TransactionDate.ToLocalTime().ToString("dd/MM/yyyy")</td>
                    <td>@t.Amount.ToString("N0") @t.Currency</td>
                    <td>@t.Status</td>
                    <td>@t.ExternalTransactionRef</td>
                </tr>
            }
        }
    </tbody>
</table>
