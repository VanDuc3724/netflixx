@model Netflixx.Models.ViewModel.CreatePackageViewModel
@{
    ViewData["Title"] = "Create Package";
    Layout = "_Layout";
}
@section Styles {
    <link rel="stylesheet" href="~/css/FPackage.css" />
}
<div class="container mt-4">
    <h2 class="text-center mb-4">Tạo Gói Phim</h2>
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Package.Name" class="form-label">Tên gói</label>
            <input asp-for="Package.Name" class="form-control" />
            <span asp-validation-for="Package.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Package.Description" class="form-label">Mô tả</label>
            <textarea asp-for="Package.Description" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label asp-for="Package.Price" class="form-label">Giá (coins)</label>
            <input asp-for="Package.Price" class="form-control" type="number" min="0" />
            <span asp-validation-for="Package.Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Chọn phim</label>
            <div class="row">
                @foreach (var film in Model.Films)
                {
                    <div class="form-check col-md-3">
                        <input class="form-check-input" type="checkbox" value="@film.Id" name="SelectedFilmIds" id="film_@film.Id" />
                        <label class="form-check-label" for="film_@film.Id">@film.Title</label>
                    </div>
                }
            </div>
        </div>
        <button type="submit" class="btn btn-danger">Tạo gói</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
