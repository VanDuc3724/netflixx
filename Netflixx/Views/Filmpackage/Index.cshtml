@model IEnumerable<Netflixx.Models.ViewModel.FilmpackageIndexViewModel>

<h2>Film Packages</h2>
<div>
    <a asp-action="Billhistory" class="btn btn-secondary">Purchase History</a>
</div>
<table class="table mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Films</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pkg in Model)
        {
            <tr>
                <td>@pkg.Name</td>
                <td>@pkg.Description</td>
                <td>@string.Join(", ", pkg.Films)</td>
            </tr>
        }
    </tbody>
</table>
