@model Netflixx.Models.FilmPackageViewModel
@using System.Security.Claims
@using System.Collections.Generic

@{
    ViewData["Title"] = "Thanh toán";
    
    string username = User.Identity.Name;
    var providers = new List<(int Id, string Name)>
    {
        (1, "Ngân hàng VietQR"),
        (2, "MoMo"),
        (3, "Thanh toán trực tiếp")
    };

    int providerId = Model.ProviderId;


    // Thông tin ngân hàng
    string bankId = "970454";
    string accountNo = "9021625262901";
    string template = "compact";
    string amount = Model.PackagePrice.ToString();
    string description = $"{username}";
    string accountName = "NGO VAN DUC";

    // Tạo link QR thanh toán
    string qrUrl = $"https://img.vietqr.io/image/{bankId}-{accountNo}-{template}.png" +
                   $"?amount={amount}" +
                   $"&addInfo={Uri.EscapeDataString(description)}" +
                   $"&accountName={Uri.EscapeDataString(accountName)}";

    string packageClass = Model.PackageName switch
    {
        "Free" => "free",
        "Standard" => "standard",
        "Premium" => "premium",
        _ => "default"
    };

    // Icon đại diện cho gói
    string packageIcon = Model.PackageName switch
    {
        "Free" => "🆓",
        "Standard" => "⭐",
        "Premium" => "👑",
        _ => "📦"
    };
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Netflixx</title>
    <style>
        body {
            background-color: #0f0f1a;
            color: #ffffff;
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            padding: 0;
        }

        .package-card {
            max-width: 500px;
            margin: 3rem auto;
            padding: 2rem;
            border-radius: 16px;
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
            text-align: center;
            transition: transform 0.3s ease;
        }

            .package-card:hover {
                transform: translateY(-5px);
            }

            .package-card.free {
                border: 2px dashed #2ecc71;
                background: rgba(46, 204, 113, 0.05);
            }

            .package-card.standard {
                border: 2px solid #3498db;
                background: rgba(52, 152, 219, 0.05);
            }

            .package-card.premium {
                border: 2px solid #ffcc00;
                background: rgba(255, 204, 0, 0.05);
            }

        h1 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .package-icon {
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
            display: block;
        }

        .package-price {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 1rem;
            color: #ffffff;
        }

        .qr-image {
            display: block;
            margin: 1.5rem auto;
            max-width: 300px;
            width: 80%;
            border-radius: 12px;
            box-shadow: 0 6px 20px rgba(255, 204, 0, 0.3);
        }

        .free-package-message {
            font-style: italic;
            color: #2ecc71;
            font-weight: 600;
            font-size: 1.1rem;
            margin-top: 1rem;
        }

        .back-btn {
            display: inline-block;
            margin-top: 1.5rem;
            padding: 0.6rem 1.2rem;
            background-color: #ffcc00;
            color: #000;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .back-btn:hover {
                background-color: #e6b800;
            }

        .check-payment-btn {
            display: inline-block;
            margin-top: 1rem;
            padding: 0.6rem 1.2rem;
            background-color: #2ecc71;
            color: #fff;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .check-payment-btn:hover {
                background-color: #27ae60;
            }

    </style>
</head>
<body>
    <div class="package-card @packageClass">
        <span class="package-icon">@packageIcon</span>
        <h1>Gói: @Model.PackageName</h1>
        <p class="package-price">@Model.PackagePrice.ToString("N0") đ</p
             <form method="get" style="margin-bottom:1rem;">
            <input type="hidden" name="packageId" value="@Model.PackageId" />
            <input type="hidden" name="packageName" value="@Model.PackageName" />
            <input type="hidden" name="packagePrice" value="@Model.PackagePrice" />
            <select name="providerId" onchange="this.form.submit()">
                @foreach (var p in providers)
                {
                    <option value="@p.Id" selected="@(p.Id == providerId)">@p.Name</option>
                }
            </select>
        </form>

        @if (Model.PackagePrice > 0)
        {
            if (providerId == 1)
            {
                <p>Quét mã QR bằng app ngân hàng để thanh toán:</p>
                <img class="qr-image" src="@qrUrl" alt="QR thanh toán VietQR" />
            }
            else if (providerId == 2)
            {
                <p>Nhấn vào liên kết bên dưới để thanh toán qua MoMo:</p>
                <a class="back-btn" href="#">Thanh toán MoMo (demo)</a>
            }
            else if (providerId == 3)
            {
                <p>Vui lòng đến quầy để thanh toán trực tiếp.</p>
            }
        }
        else
        {
            <p class="free-package-message">Đây là gói miễn phí. Bạn có thể sử dụng ngay.</p>
        }


        <a asp-action="Index" asp-controller="Filmpackage" class="back-btn">Quay lại</a>
        <button id="checkPaymentBtn" class="check-payment-btn">✅ Tôi đã thanh toán</button>

        <div id="paymentResult" style="margin-top: 1rem; font-weight: bold;"></div>


    </div>
</body>
</html>
<script>
    document.getElementById("checkPaymentBtn").addEventListener("click", async function () {
        const provider = @Model.ProviderId;
        const price = @Model.PackagePrice;
        const content = "@username";
        const resultElement = document.getElementById("paymentResult");
         if (provider !== 1) {
            resultElement.style.color = "orange";
            resultElement.textContent = "⚠️ Chức năng kiểm tra chỉ áp dụng cho chuyển khoản ngân hàng.";
            return;
        }

        try {
                        const response = await fetch("/Filmpackage/GetPaymentData");

            const data = await response.json();
            const lastPaid = data.data[data.data.length - 1];
            const lastPrice = parseInt(lastPaid["Giá trị"]);
            const lastContent = lastPaid["Mô tả"];

            if (lastPrice == price && lastContent.includes(content)) {
                resultElement.style.color = "lime";
                resultElement.textContent = "✅ Thanh toán thành công!";
            } else {
                resultElement.style.color = "orange";
                resultElement.textContent = "⚠️ Chưa nhận được thanh toán. Vui lòng thử lại sau vài phút.";
            }
        } catch (e) {
            console.error("Lỗi", e);
            resultElement.style.color = "red";
            resultElement.textContent = "❌ Đã xảy ra lỗi khi kiểm tra thanh toán.";
        }
    });
</script>
