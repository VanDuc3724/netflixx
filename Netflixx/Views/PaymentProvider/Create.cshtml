@model Netflixx.Models.PaymentProvidersModel
@{
    ViewData["Title"] = "Thêm phương thức thanh toán";
}
<div class="container mt-4">
    <h2 class="text-white mb-4">@ViewData["Title"]</h2>
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="Name" class="form-label text-white"></label>
            <input asp-for="Name" class="form-control bg-dark text-white" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="MethodType" class="form-label text-white"></label>
            <select asp-for="MethodType" class="form-select bg-dark text-white">
                <option value="">--Chọn loại--</option>
                @foreach (var mt in ViewBag.MethodTypes)
                {
                    <option value="@mt">@mt</option>
                }
            </select>
            <span asp-validation-for="MethodType" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger">Lưu</button>
        <a asp-action="Index" class="btn btn-outline-light ms-2">Hủy</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}