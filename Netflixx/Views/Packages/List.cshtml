@model IEnumerable<Netflixx.Models.PackagesModel>
@await Html.PartialAsync("_ToastPartial")

@{
    ViewData["Title"] = "Packages";
}

<div class="container mt-4">
    <h2 class="text-white mb-3">Available Packages</h2>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@string.Format("{0:C}", item.Price)</td>
                <td>
                    <form asp-action="CreatePaymentMomo" method="post" asp-controller="Payment">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger">Pay with MoMo</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
