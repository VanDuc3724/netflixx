@model Netflixx.Models.Vnpay.PaymentInformationModel
@{
    ViewData["Title"] = "VNPay Checkout";
}

<h2>Thanh toán qua VNPay</h2>

<form asp-action="CreatePaymentUrlVnpay" asp-controller="Payment" method="get">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Tên người thanh toán</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="OrderDescription" class="form-label">Mô tả đơn hàng</label>
        <input asp-for="OrderDescription" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Amount" class="form-label">Số tiền (đ)</label>
        <input asp-for="Amount" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="OrderType" class="form-label">Loại đơn hàng</label>
        <input asp-for="OrderType" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Thanh toán VNPay</button>
</form>
