@{
    ViewData["Title"] = "Deposit Coins";
}

<h2>Deposit Coins</h2>
<form asp-action="Deposit" method="post">
    <div class="mb-3">
        <label class="form-label" for="amount">Amount (VND)</label>
        <input type="number" name="amount" class="form-control" min="1000" step="1000" required />
    </div>
    <button type="submit" class="btn btn-primary">Pay with VNPay</button>
</form>
