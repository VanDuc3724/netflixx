@model Netflixx.Models.ViewModel.FilmWatchViewModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<AppUserModel> _userManager

@{
    ViewData["Title"] = $"Watch: {Model.Film.Title} - Ep {Model.CurrentEpisode}";
    Layout = null;
}

