@* Views/Blog/Delete.cshtml *@
@model Netflixx.Models.BlogPost

@{
    ViewData["Title"] = "Delete Blog Post";
}

<div class="container mt-4">
    <h1 class="text-white">@ViewData["Title"]</h1>
    <h3 class="text-warning">Are you sure you want to delete this post?</h3>

    <div class="card bg-dark text-white mt-4">
        <div class="card-body">
            <h3 class="text-danger">@Model.Title</h3>
            <p class="text-muted">
                Created: @Model.CreatedDate.ToString("MMMM dd, yyyy")
                @if (Model.LastUpdated.HasValue)
                {
                    <span> | Last Updated: @Model.LastUpdated.Value.ToString("MMMM dd, yyyy")</span>
                }
            </p>

            @if (Model.Film != null)
            {
                <div class="mb-3">
                    <span class="badge bg-primary">Related to: @Model.Film.Title</span>
                </div>
            }

            <div class="blog-content-preview">
                @Html.Raw(Model.Content)
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-outline-light ms-2">Back to Blog</a>
            </form>
        </div>
    </div>
</div>