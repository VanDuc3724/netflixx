@model Netflixx.Models.BlogPost
<link rel="stylesheet" href="/css/blog.css">


@{
    ViewData["Title"] = "Delete Blog Post";
}

<div class="container netflix-bg blog-delete-container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card netflix-card">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-trash me-2"></i>
                        @ViewData["Title"]
                    </h2>
                </div>
                <div class="card-body">
                    <h4 class="text-warning">Are you sure you want to delete this post?</h4>

                    <div class="blog-preview mt-4">
                        <h3>@Model.Title</h3>
                        <div class="text-muted mb-3">
                            <small>
                                Created: @Model.CreatedDate.ToString("MMMM dd, yyyy")
                                @if (Model.LastUpdated.HasValue)
                                {
                                    <span> | Last Updated: @Model.LastUpdated.Value.ToString("MMMM dd, yyyy")</span>
                                }
                                @if (Model.Author != null)
                                {
                                    <span> | Author: @Model.Author.UserName</span>
                                }
                            </small>
                        </div>

                        @if (Model.Film != null)
                        {
                            <div class="mb-3">
                                <span class="badge bg-danger">Related to: @Model.Film.Title</span>
                            </div>
                        }

                        @* <div class="blog-content-preview">
                            @{
                                var content = Model.Content ?? "";
                                var paragraphs = content.Split(new[] { "\r\n", "\r", "\n" }, StringSplitOptions.None);
                                var previewText = string.Join(" ", paragraphs.Take(3));
                                if (previewText.Length > 300)
                                {
                                    previewText = previewText.Substring(0, 300) + "...";
                                }
                            }
                            <p>@previewText</p>
                        </div> *@
                    </div>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a href="@ViewBag.Referer" class="btn btn-outline-light">
                                <i class="bi bi-arrow-left me-1"></i> Back
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i> Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>