@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Danh sách người dùng";
}
<style>
    body {
        background-color: #121212;
        color: #fff;
        font-family: 'Segoe UI', sans-serif;
    }

    .neon-pink {
        color: #ff4081;
    }

    .btn-pink {
        background-color: #ff4081;
        border: none;
        color: #fff;
    }

        .btn-pink:hover {
            background-color: #ff1a66;
        }

    .table-dark th,
    .table-dark td {
        border-color: #2c2c2c;
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #ff4081;
    }

    .search-form input {
        background-color: #1f1f1f;
        color: #fff;
        border: 1px solid #555;
    }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold neon-pink mb-0">Quản lý người dùng</h2>

        <!-- Form lọc vai trò và tìm kiếm -->
        <form method="get" asp-controller="User" asp-action="Index" class="d-flex align-items-center">
            <!-- Dropdown Vai trò -->
            <div class="dropdown me-3">
                <button class="btn btn-outline-light dropdown-toggle" type="button" id="dropdownRoleButton" data-bs-toggle="dropdown" aria-expanded="false">
                    @ViewBag.SelectedRole
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownRoleButton">
                    <li><a class="dropdown-item" href="#" onclick="selectRole('Tất cả'); return false;">Tất cả</a></li>
                    @foreach (var role in ViewBag.AvailableRoles as List<string>)
                    {
                        <li><a class="dropdown-item" href="#" onclick="selectRole('@role'); return false;">@role</a></li>
                    }
                </ul>
                <input type="hidden" name="role_type" id="SelectedRole" value="@ViewBag.SelectedRole" />
            </div>

            <!-- Ô tìm kiếm -->
            <input type="text" name="search_name" class="form-control me-2" placeholder="Tìm theo tên..." value="@Context.Request.Query["search_name"]" style="width: 250px;" />

            <!-- Trạng thái sắp xếp -->
            <input type="hidden" name="sortField" value="@ViewBag.CurrentSortField" />
            <input type="hidden" name="sortOrder" value="@ViewBag.CurrentSortOrder" />

            <button type="submit" class="btn btn-pink">Tìm kiếm</button>
        </form>
    </div>

    <div class="table-responsive rounded shadow">
        <table class="table table-dark table-hover align-middle mb-0 rounded overflow-hidden">
            <thead style="background-color: #1c1c1c;" class="text-white">
                <tr style="border-bottom: 2px solid #ff4081;">
                    <th style="width:5%">#</th>
                    <th style="width:25%">
                        <a asp-action="Index"
                           asp-route-search_name="@Context.Request.Query["search_name"]"
                           asp-route-role_type="@ViewBag.SelectedRole"
                           asp-route-sort_order="@(ViewBag.CurrentSortOrder == "asc" ? "desc" : "asc")"
                           class="text-white text-decoration-none">
                            Tên
                            @if (ViewBag.CurrentSortField == "Name")
                            {
                                if (ViewBag.CurrentSortOrder == "asc")
                                {
                                    <i class="bi bi-arrow-down-short"></i>
                                }
                                else
                                {
                                    <i class="bi bi-arrow-up-short"></i>
                                }
                            }
                        </a>
                    </th>
                    <th style="width:30%">Email</th>
                    <th style="width:25%">Vai trò</th>
                    <th style="width:15%" class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var idx = 1;
                }
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@idx</td>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>
                            @(user.Role != null && user.Role.Any()
                                                    ? string.Join(", ", user.Role)
                                                    : "Không có vai trò")
                    </td>
                    <td class="text-center">
                        <a asp-action="Detail" asp-route-id="@user.Id" class="btn btn-outline-light btn-sm">
                            Xem
                        </a>
                    </td>
                </tr>
                                idx++;
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Script chọn vai trò -->
<script>
    function selectRole(role) {
        document.getElementById("SelectedRole").value = role;
        document.forms[0].submit();
    }
</script>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
