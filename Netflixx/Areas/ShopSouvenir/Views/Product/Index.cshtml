    <script>
        $(document).ready(function() {
            // Khởi tạo Isotope
            var $grid = $('.isotope-grid').isotope({
                itemSelector: '.isotope-item',
                layoutMode: 'fitRows',
                getSortData: {
                    name: '.js-name-b2',
                    price: function(itemElem) {
                        var priceText = $(itemElem).find('.stext-105').text();
                        return parseInt(priceText.replace(/[^\d]/g, ''));
                    }
                }
            });

            // Filter theo category
            $('.filter-tope-group').on('click', 'button', function() {
                var filterValue = $(this).attr('data-filter');
                $grid.isotope({ filter: filterValue });

                // Update active class
                $('.filter-tope-group button').removeClass('how-active1');
                $(this).addClass('how-active1');
            });

            // Filter theo giá
            $('[data-price]').click(function(e) {
                e.preventDefault();
                var priceRange = $(this).data('price');
                var minPrice = 0, maxPrice = Number.MAX_VALUE;

                if (priceRange !== '*') {
                    var parts = priceRange.split('-');
                    minPrice = parseInt(parts[0]) || 0;
                    maxPrice = parts[1] ? parseInt(parts[1]) : Number.MAX_VALUE;
                }

                $grid.isotope({
                    filter: function() {
                        var priceText = $(this).find('.stext-105').text();
                        var price = parseInt(priceText.replace(/[^\d]/g, ''));
                        return price >= minPrice && price <= maxPrice;
                    }
                });

                // Update active class
                $('[data-price]').removeClass('filter-link-active');
                $(this).addClass('filter-link-active');
            });

            // Sắp xếp
            $('[data-sort]').click(function(e) {
                e.preventDefault();
                var sortValue = $(this).data('sort');
                var sortOptions;

                switch(sortValue) {
                    case 'price-asc':
                        sortOptions = { sortBy: 'price', sortAscending: true };
                        break;
                    case 'price-desc':
                        sortOptions = { sortBy: 'price', sortAscending: false };
                        break;
                    case 'name':
                        sortOptions = { sortBy: 'name' };
                        break;
                    default:
                        sortOptions = { sortBy: 'original-order' };
                }

                $grid.isotope(sortOptions);

                // Update active class
                $('[data-sort]').removeClass('filter-link-active');
                $(this).addClass('filter-link-active');
            });

            // Quick View Modal
            $('.js-show-modal1').on('click', function(e) {
                e.preventDefault();
                var productId = $(this).data('product-id');

                // AJAX call để lấy chi tiết sản phẩm
                // (Giống như trong trang Home)
            });

            // Tìm kiếm
            $('input[name="search-product"]').on('keyup', function() {
                var searchText = $(this).val().toLowerCase();

                $grid.isotope({
                    filter: function() {
                        var name = $(this).find('.js-name-b2').text().toLowerCase();
                        return name.indexOf(searchText) !== -1;
                    }
                });
            });
        });
    </script>

