@model Netflixx.Models.BrandSouModel
@{
    ViewData["Title"] = "Brand Details";
}
<div class="container">
    <h1>Brand Details</h1>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
