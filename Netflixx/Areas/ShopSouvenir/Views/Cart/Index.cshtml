    <script>
        $(document).ready(function() {
            console.log("Script loaded"); // Kiểm tra script có chạy không

            // Function to calculate item total
            function calculateItemTotal(productId) {
                var priceElement = $(`.item-total[data-id="${productId}"]`);
                var price = parseFloat(priceElement.data('price'));
                var quantity = parseInt($(`.num-product[data-id="${productId}"]`).val());
                var total = price * quantity;
                priceElement.text(total.toLocaleString('vi-VN') + ' ₫');
                console.log("Updated item", productId, "total:", total);
                return total;
            }

            // Function to calculate cart total
            function calculateCartTotal() {
                var total = 0;
                $('.item-total').each(function() {
                    var price = parseFloat($(this).data('price'));
                    var quantity = parseInt($(this).closest('tr').find('.num-product').val());
                    total += price * quantity;
                });
                $('#cart-total-price').text(total.toLocaleString('vi-VN') + ' ₫');
                console.log("Cart total updated:", total);
                return total;
            }

            // Quantity down button - ĐÃ THÊM stopImmediatePropagation() và off('click')
            $('.btn-num-product-down').off('click').on('click', function(e) {
                e.preventDefault();
                e.stopImmediatePropagation();

                var productId = $(this).data('id');
                var input = $(`.num-product[data-id="${productId}"]`);
                var currentVal = parseInt(input.val());

                if (currentVal > 1) {
                    input.val(currentVal - 1);
                    calculateItemTotal(productId);
                    calculateCartTotal();
                    updateCartItem(productId, currentVal - 1);
                }
            });

            // Quantity up button - ĐÃ THÊM stopImmediatePropagation() và off('click')
            $('.btn-num-product-up').off('click').on('click', function(e) {
                e.preventDefault();
                e.stopImmediatePropagation();

                var productId = $(this).data('id');
                var input = $(`.num-product[data-id="${productId}"]`);
                var currentVal = parseInt(input.val());

                input.val(currentVal + 1);
                calculateItemTotal(productId);
                calculateCartTotal();
                updateCartItem(productId, currentVal + 1);
            });

            // Remove item
            $('.remove-item').off('click').on('click', function(e) {
                e.preventDefault();
                e.stopImmediatePropagation();

                var productId = $(this).data('id');
                removeFromCart(productId);
            });

            // Update cart item via AJAX
            function updateCartItem(productId, quantity) {
                console.log("Updating cart item", productId, "quantity:", quantity);
                $.ajax({
                    url: '@Url.Action("UpdateCart", "Cart", new { area = "ShopSouvenir" })',
                    type: 'POST',
                    data: { id: productId, quantity: quantity },
                    success: function(response) {
                        if (response.success) {
                            $(".icon-header-noti[data-notify]").attr("data-notify", response.cartCount);
                            console.log("Cart updated successfully");
                        }
                    },
                    error: function(xhr) {
                        console.error("Error updating cart:", xhr.responseText);
                    }
                });
            }

            // Remove from cart via AJAX
            function removeFromCart(productId) {
                $.ajax({
                    url: '@Url.Action("RemoveFromCart", "Cart", new { area = "ShopSouvenir" })',
                    type: 'POST',
                    data: { id: productId },
                    success: function(response) {
                        if (response.success) {
                            $(`tr[data-id="${productId}"]`).remove();
                            $(".icon-header-noti[data-notify]").attr("data-notify", response.cartCount);
                            calculateCartTotal();
                        }
                    }
                });
            }
        });
    </script>
