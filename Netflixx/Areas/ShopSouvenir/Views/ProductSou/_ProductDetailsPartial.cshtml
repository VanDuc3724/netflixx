@model Netflixx.Models.Souvenir.ProductSouModel

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? Url.Content("~/images/default-product.jpg") : Model.ImageUrl)"
                 class="img-fluid modal-product-image" alt="@Model.Name"
                 onerror="this.onerror=null;this.src='@Url.Content("~/images/default-product.jpg")';" />
        </div>
        <div class="col-md-8">
            <h4>@Model.Name</h4>

            <div class="row product-details-row">
                <div class="col-md-3 product-details-label">Danh mục:</div>
                <div class="col-md-9 product-details-value">@(Model.Category?.Name ?? "Không xác định")</div>
            </div>

            <div class="row product-details-row">
                <div class="col-md-3 product-details-label">Thương hiệu:</div>
                <div class="col-md-9 product-details-value">@(Model.Brand?.Name ?? "Không xác định")</div>
            </div>

            <div class="row product-details-row">
                <div class="col-md-3 product-details-label">Dòng sản phẩm:</div>
                <div class="col-md-9 product-details-value">@(Model.Series?.Name ?? "Không xác định")</div>
            </div>

            <div class="row product-details-row">
                <div class="col-md-3 product-details-label">Giá:</div>
                <div class="col-md-9 product-details-value">@Model.Price.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</div>
            </div>

            <div class="row product-details-row">
                <div class="col-md-3 product-details-label">Số lượng tồn kho:</div>
                <div class="col-md-9 product-details-value @(Model.StockQuantity < 10 ? "text-danger" : "text-success")">
                    @Model.StockQuantity
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="row product-details-row">
                    <div class="col-md-3 product-details-label">Mô tả:</div>
                    <div class="col-md-9 product-details-value">
                        <div class="product-description-content">
                            @Html.Raw(Model.Description)
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>