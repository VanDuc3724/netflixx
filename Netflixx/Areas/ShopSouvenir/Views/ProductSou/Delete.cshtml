@model Netflixx.Models.Souvenir.ProductSouModel
@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<h3>Bạn có chắc chắn muốn xóa sản phẩm "@Model.Name"?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tên sản phẩm</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Danh mục</dt>
        <dd class="col-sm-10">@(Model.Category?.Name ?? "Chưa phân loại")</dd>
        <dt class="col-sm-2">Thương hiệu</dt>
        <dd class="col-sm-10">@(Model.Brand?.Name ?? "Không xác định")</dd>
        <dt class="col-sm-2">Series</dt>
        <dd class="col-sm-10">@(Model.Series?.Name ?? "Không xác định")</dd>
        <dt class="col-sm-2">Giá</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</dd>
        <dt class="col-sm-2">Tồn kho</dt>
        <dd class="col-sm-10">@Model.StockQuantity</dd>
        <dt class="col-sm-2">Hình ảnh</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 200px; max-height: 200px;" />
            }
            else
            {
                <span>Không có hình ảnh</span>
            }
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>