@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Manage Roles";
}

<!-- Simple Pink & Black Role List -->
<style>
    body {
        background: #000;
        color: #fff;
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 500px;
        margin: 2rem auto;
        padding: 1rem;
    }

    .header {
        text-align: center;
        margin-bottom: 1.5rem;
    }

        .header h2 {
            color: #FF4081;
            font-size: 1.8rem;
            margin: 0;
        }

    .role-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .role-list li {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #111;
            padding: .75rem 1rem;
            margin-bottom: .5rem;
            border-radius: .5rem;
        }

            .role-list li:hover {
                background: #222;
            }

    .role-name {
        font-size: 1rem;
    }

    .actions button, .actions a {
        background: none;
        border: none;
        color: #FF4081;
        padding: .25rem .5rem;
        font-size: .9rem;
        cursor: pointer;
        transition: color .2s;
        text-decoration: none; /* Remove underline */
    }

        .actions button:hover, .actions a:hover {
            color: #E91E63;
        }

    .new-role {
        display: block;
        text-align: center;
        margin-top: 1rem;
        color: #000;
        background: #FF4081;
        padding: .5rem 1rem;
        border-radius: .5rem;
        text-decoration: none;
        font-weight: 600;
    }

        .new-role:hover {
            background: #E91E63;
        }

    .form-check-input:checked {
        background-color: #dc3545; /* màu đỏ cho deactive */
        border-color: #dc3545;
    }

    #activeStatus:checked {
        background-color: #198754; /* màu xanh cho active */
        border-color: #198754;
    }
</style>

<div class="container">
    <div class="header">
        <h2>@ViewData["Title"]</h2>
    </div>

    <ul class="role-list">
        @if (!Model.Any())
        {
            <li class="role-name" style="justify-content:center; color:#888;">No roles available</li>
        }
        else
        {
            foreach (var role in Model)
            {
                <li>
                    <span class="role-name">@role.Name</span>
                    <span class="actions">
                        <a asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                        <form asp-action="Delete" method="post" onsubmit="return confirm('Delete this role?');" style="display:inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="roleId" value="@role.Id" />
                            <button type="submit">Delete</button>
                        </form>
                    </span>
                </li>
            }
        }
    </ul>

    <a asp-area="Admin" asp-controller="Roles" asp-action="Create" class="new-role">+ New Role</a>
</div>
