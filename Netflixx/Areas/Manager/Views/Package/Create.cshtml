@model Netflixx.Models.ViewModel.PackageCreateViewModel

<h2>Create Package</h2>
<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label>Select Films</label>
        @foreach (var film in Model.AvailableFilms)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="SelectedFilmIds" value="@film.Id" id="film_@film.Id" />
                <label class="form-check-label" for="film_@film.Id">@film.Title</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
